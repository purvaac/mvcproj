@model mvcproj.Pages.Customers.Index
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-3">List of Customers</h2>

<a class="btn btn-primary ab-3" href="/Customers/Create">New Customer</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Company</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Notes</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.CustomersList)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@(customer.FirstName + " " + customer.LastName)</td> <!-- Fixed property names -->
                <td>@customer.Company</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>@customer.Notes</td>
                <td>@customer.CreatedAt</td>
                <td styles="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" href="/Customers/Edit?id=@customer.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Customers/Delete?id=@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
